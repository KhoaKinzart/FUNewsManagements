@page
@model ASM1.Pages.SystemAccounts.IndexModel

@{
    ViewData["Title"] = "Account Management";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">
                        <i class="bi bi-people-fill"></i> Account Management
                    </h2>
                    <p class="mb-0">Manage all user accounts in the system</p>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <span class="badge bg-info fs-6">Total Accounts: @Model.SystemAccounts.Count</span>
                        </div>
                        <div>
                            <a asp-page="Create" class="btn btn-success">
                                <i class="bi bi-person-plus"></i> Create New Account
                            </a>
                        </div>
                    </div>

                    @if (!ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            <ul class="mb-0">
                                @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    @if (Model.SystemAccounts.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th scope="col">
                                            <i class="bi bi-hash"></i> Account ID
                                        </th>
                                        <th scope="col">
                                            <i class="bi bi-person"></i> Account Name
                                        </th>
                                        <th scope="col">
                                            <i class="bi bi-envelope"></i> Email
                                        </th>
                                        <th scope="col">
                                            <i class="bi bi-shield"></i> Role
                                        </th>
                                        <th scope="col">
                                            <i class="bi bi-calendar"></i> Created Date
                                        </th>
                                        <th scope="col">
                                            <i class="bi bi-gear"></i> Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.SystemAccounts)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-secondary">@item.AccountID</span>
                                            </td>
                                            <td>
                                                <strong>@item.AccountName</strong>
                                            </td>
                                            <td>
                                                <span class="text-primary">@item.AccountEmail</span>
                                            </td>
                                            <td>
                                                @switch (item.AccountRole)
                                                {
                                                    case 1:
                                                        <span class="badge bg-danger">ADMIN</span>
                                                        break;
                                                    case 2:
                                                        <span class="badge bg-primary">USER</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">UNKNOWN</span>
                                                        break;
                                                }
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    @DateTime.Now.ToString("dd/MM/yyyy")
                                                </small>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-page="./Details" asp-route-id="@item.AccountID" 
                                                       class="btn btn-info btn-sm" title="View Details">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <a asp-page="./Edit" asp-route-id="@item.AccountID" 
                                                       class="btn btn-warning btn-sm" title="Edit">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <a asp-page="./Delete" asp-route-id="@item.AccountID" 
                                                       class="btn btn-danger btn-sm" title="Delete">
                                                        <i class="bi bi-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        
                        <div class="mt-3">
                            <div class="row">
                                <div class="col-md-6">
                                    <small class="text-muted">
                                        Showing @Model.SystemAccounts.Count account(s)
                                    </small>
                                </div>
                                <div class="col-md-6 text-end">
                                    <small class="text-muted">
                                        Last updated: @DateTime.Now.ToString("dd/MM/yyyy HH:mm")
                                    </small>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="mb-3">
                                <i class="bi bi-people" style="font-size: 3rem; color: #6c757d;"></i>
                            </div>
                            <h4 class="text-muted">No accounts found</h4>
                            <p class="text-muted">There are no user accounts in the system yet.</p>
                            <a asp-page="Create" class="btn btn-primary">
                                <i class="bi bi-person-plus"></i> Create First Account
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>