@page
@model ASM1.Pages.Reports.NewsStatisticsModel
@{
    ViewData["Title"] = "News Statistics Report";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2>
                    <i class="fas fa-chart-bar text-primary"></i>
                    News Statistics Report
                </h2>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-page="/Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Reports</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle"></i>
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">
                <i class="fas fa-calendar-alt"></i>
                Select Date Range
            </h5>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label asp-for="StartDate" class="form-label">
                            <i class="fas fa-calendar-day"></i> Start Date:
                        </label>
                        <input asp-for="StartDate" type="date" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="EndDate" class="form-label">
                            <i class="fas fa-calendar-check"></i> End Date:
                        </label>
                        <input asp-for="EndDate" type="date" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">&nbsp;</label>
                        <button type="submit" class="btn btn-primary form-control">
                            <i class="fas fa-chart-line"></i> Generate Report
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Statistics.Any())
    {
        <div class="card shadow-sm">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0">
                    <i class="fas fa-table"></i>
                    Statistics Results (From @Model.StartDate.ToString("dd/MM/yyyy") to @Model.EndDate.ToString("dd/MM/yyyy"))
                </h5>
            </div>
            <div class="card-body">
                <!-- Summary Cards -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card bg-primary text-white">
                            <div class="card-body text-center">
                                <i class="fas fa-newspaper fa-2x mb-2"></i>
                                <h4>@Model.Statistics.Sum(s => s.TotalArticles)</h4>
                                <p class="mb-0">Total Articles</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-success text-white">
                            <div class="card-body text-center">
                                <i class="fas fa-check-circle fa-2x mb-2"></i>
                                <h4>@Model.Statistics.Sum(s => s.ActiveArticles)</h4>
                                <p class="mb-0">Active Articles</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-warning text-white">
                            <div class="card-body text-center">
                                <i class="fas fa-pause-circle fa-2x mb-2"></i>
                                <h4>@Model.Statistics.Sum(s => s.InactiveArticles)</h4>
                                <p class="mb-0">Inactive Articles</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-info text-white">
                            <div class="card-body text-center">
                                <i class="fas fa-percentage fa-2x mb-2"></i>
                                @{
                                    var totalArticles = Model.Statistics.Sum(s => s.TotalArticles);
                                    var totalActive = Model.Statistics.Sum(s => s.ActiveArticles);
                                    var overallRate = totalArticles > 0 ? (totalActive * 100.0 / totalArticles) : 0;
                                }
                                <h4>@overallRate.ToString("F1")%</h4>
                                <p class="mb-0">Active Rate</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Detailed Table -->
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th><i class="fas fa-calendar"></i> Date</th>
                                <th><i class="fas fa-list"></i> Total Articles</th>
                                <th><i class="fas fa-check"></i> Active Articles</th>
                                <th><i class="fas fa-times"></i> Inactive Articles</th>
                                <th><i class="fas fa-chart-pie"></i> Active Rate (%)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var stat in Model.Statistics)
                            {
                                var activeRate = stat.TotalArticles > 0 ? (stat.ActiveArticles * 100.0 / stat.TotalArticles) : 0;
                                <tr>
                                    <td>
                                        <strong>@stat.Date.ToString("dd/MM/yyyy")</strong>
                                        <br>
                                        <small class="text-muted">@stat.Date.ToString("dddd")</small>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary fs-6">@stat.TotalArticles</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-success fs-6">@stat.ActiveArticles</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-warning fs-6">@stat.InactiveArticles</span>
                                    </td>
                                    <td>
                                        <div class="progress" style="height: 25px;">
                                            <div class="progress-bar bg-success progress-bar-striped progress-bar-animated" 
                                                 role="progressbar" 
                                                 style="width: @(activeRate)%" 
                                                 aria-valuenow="@activeRate" 
                                                 aria-valuemin="0" 
                                                 aria-valuemax="100">
                                                <strong>@activeRate.ToString("F1")%</strong>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else if (string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="fas fa-info-circle"></i>
            <strong>No data found!</strong> No articles were created in the selected date range. Please try a different date range.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}