@page
@model ASM1.Pages.NewsArticles.IndexModel

@{
    ViewData["Title"] = "News Articles";
}

<style>
    /* ===== Page Header ===== */
    h1 {
        text-align: center;
        font-weight: 700;
        color: #0d6efd;
        margin-top: 30px;
        margin-bottom: 20px;
    }

    .btn-primary {
        background-color: #0d6efd;
        border: none;
        transition: all 0.2s ease;
    }

        .btn-primary:hover {
            background-color: #0b5ed7;
            transform: translateY(-2px);
        }

    /* ===== Card Layout ===== */
    .card {
        border-radius: 12px;
        transition: all 0.25s ease-in-out;
        border: none;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.08);
    }

    .hover-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 10px 22px rgba(0, 0, 0, 0.15);
    }

    .card-title {
        font-size: 1.25rem;
        margin-bottom: 0.25rem;
        color: #0d6efd;
        font-weight: 600;
    }

    .card-subtitle {
        font-size: 0.9rem;
        color: #6c757d;
        margin-bottom: 10px;
    }

    .card-text {
        font-size: 0.95rem;
        color: #444;
        flex-grow: 1;
    }

    .badge {
        font-size: 0.85rem;
    }

    .btn-sm {
        font-size: 0.85rem;
        padding: 4px 10px;
        border-radius: 6px;
    }

    .card-body {
        display: flex;
        flex-direction: column;
        height: 100%;
    }
</style>

<h1>News Articles</h1>

<p>
    <a asp-page="Create" class="btn btn-primary mb-4">
        <i class="bi bi-plus-circle"></i> Create New
    </a>
</p>

<div class="container">
    <div class="row g-4">
        @foreach (var item in Model.NewsArticle)
        {
            <div class="col-md-4 col-sm-6">
                <div class="card h-100 hover-card">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.NewsTitle</h5>
                        <h6 class="card-subtitle">@item.Headline</h6>

                        <p class="card-text">
                            @{
                                var preview = string.IsNullOrEmpty(item.NewsContent)
                                ? ""
                                : item.NewsContent.Length > 120
                                ? item.NewsContent.Substring(0, 120) + "..."
                                : item.NewsContent;
                            }
                            @preview
                        </p>

                        <div class="mt-auto">
                            <p class="mb-1"><strong>Source:</strong> @item.NewsSource</p>
                            <p class="mb-1">
                                <strong>Status:</strong>
                                <span class="badge @(item.NewsStatus == true ? "bg-success" : "bg-secondary")">
                                    @(item.NewsStatus == true ? "Active" : "Inactive")
                                </span>
                            </p>
                            <p class="text-muted small mb-2">
                                <i class="bi bi-calendar"></i>
                                @(item.CreatedDate.HasValue? item.CreatedDate.Value.ToString("dd/MM/yyyy") : "")
                            </p>

                            <div class="d-flex justify-content-between">
                                <a asp-page="./Details" asp-route-id="@item.NewsArticleID" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a asp-page="./Edit" asp-route-id="@item.NewsArticleID" class="btn btn-outline-warning btn-sm">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-page="./Delete" asp-route-id="@item.NewsArticleID" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
